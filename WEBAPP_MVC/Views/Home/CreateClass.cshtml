@model WEBAPP_MVC.Domain.Entities.ClassEntity;

<h1>Create Class</h1>

<div class="row">
    <form asp-action="CreateClass">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="text-danger"/>
        </div>
        <div class="form-group">
            <label asp-for="Class"></label>
            <input asp-for="Class" class="text-danger" />
            <span asp-validation-for="Class" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Save"/>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}